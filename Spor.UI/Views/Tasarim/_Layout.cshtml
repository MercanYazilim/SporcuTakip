
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SporMAX - Sportcu Takip ve Yönetim Sistemi | </title>
    <!-- Bootstrap -->
    <link href="/Tasarim/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/Tasarim/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="/Tasarim/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- bootstrap-daterangepicker -->
    <link href="/Tasarim/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <link href="/Tasarim/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="/Tasarim/build/css/custom.min.css" rel="stylesheet">
    <link href="/Tasarim/vendors/normalize-css/normalize.css" rel="stylesheet">

    <link href="/Tasarim/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="/Tasarim/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
    <link href="/Tasarim/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
    <link href="/Tasarim/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
    <link href="/Tasarim/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><i class="fa fa-paw"></i> <span>SporMAX</span></a>
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    @Html.Action("_ProfilMenu", "Tasarim")
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    @{
        if (User.IsInRole("Admin"))
        {
                @Html.Action("_Menu", "Tasarim")
}
else if (User.IsInRole("Moderatör"))
{
                @Html.Action("_MenuMod", "Tasarim")
}
else
{
                @Html.Action("_MenuUser", "Tasarim")
}
                    }

                    @*@Html.Action("_MenuMod", "Tasarim")
        @Html.Action("_MenuUser", "Tasarim")*@
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="login.html">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
@Html.Action("_Profil","Tasarim")
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            @RenderBody()
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    SporMAX - Powered by <a href="https://www.yavuzmercan.com.com">Mercan Yazılım</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    <!-- jQuery -->
    <script src="/Tasarim/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/Tasarim/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="/Tasarim/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="/Tasarim/vendors/nprogress/nprogress.js"></script>
    <!-- Chart.js -->
    <script src="/Tasarim/vendors/Chart.js/dist/Chart.min.js"></script>
    <script src="/Tasarim/vendors/moment/min/moment.min.js"></script>
    <script src="/Tasarim/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <!-- jQuery Sparklines -->
    <script src="/Tasarim/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>
    <script src="/Tasarim/vendors/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
    <!-- jQuery Knob -->
    <script src="/Tasarim/vendors/jquery-knob/dist/jquery.knob.min.js"></script>
    <!-- Flot -->
    <script src="/Tasarim/vendors/Flot/jquery.flot.js"></script>
    <script src="/Tasarim/vendors/Flot/jquery.flot.pie.js"></script>
    <script src="/Tasarim/vendors/Flot/jquery.flot.time.js"></script>
    <script src="/Tasarim/vendors/Flot/jquery.flot.stack.js"></script>
    <script src="/Tasarim/vendors/Flot/jquery.flot.resize.js"></script>
    <!-- Flot plugins -->
    <script src="/Tasarim/vendors/flot.orderbars/js/jquery.flot.orderBars.js"></script>
    <script src="/Tasarim/vendors/flot-spline/js/jquery.flot.spline.min.js"></script>
    <script src="/Tasarim/vendors/flot.curvedlines/curvedLines.js"></script>
    <!-- DateJS -->
    <script src="/Tasarim/vendors/DateJS/build/date.js"></script>
    <!-- bootstrap-daterangepicker -->
    <script src="/Tasarim/vendors/moment/min/moment.min.js"></script>
    <script src="/Tasarim/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>

    <!-- Custom Theme Scripts -->
    <script src="/Tasarim/build/js/custom.min.js"></script>

    <script src="/Tasarim/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="/Tasarim/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="/Tasarim/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/Tasarim/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>



</body>
</html>